{
  "compilerOptions": {
    "target": "ES2022",                          
    "module": "ESNext",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"  // Include all TypeScript files under 'src'
  ],
  "exclude": [
    "node_modules"  // Exclude 'node_modules' from compilation
  ]
}
